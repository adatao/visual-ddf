{
  "manifest_version": 2,

  "name": "Visual DDF",
  "description": "Prototype extension for Visual DDF",
  "version": "1.0",

  "icons": {
    "64": "icon64.png"
  },

  "page_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
    "default_title": "Visual DDF"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["chrome-content.js"]
    }
  ],

  "background": {
    "scripts": ["chrome-background.js"],
    "persistent": false
  },

  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "chrome-inject.js",
    "icon64.png"
  ]
}
